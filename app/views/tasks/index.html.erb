<p style="color: green"><%= notice %></p>

<%= link_to "View All", tasks_path() %> - 
<%= link_to "View Complete", tasks_path(completed: true) %> - 
<%= link_to "View Incomplete", tasks_path(completed: false) %>

<% if @filter == "completed" %>
  <h1>Completed Tasks</h1>
<% elsif @filter == "incomplete" %>
  <h1>Incomplete Tasks</h1>
<% else %>
  <h1>Tasks</h1>
<% end %>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
